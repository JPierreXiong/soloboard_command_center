{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NEXT_TELEMETRY_DISABLED": "1",
      "ENABLE_EXTERNAL_CRON": "true"
    }
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/ai/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/payment/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/storage/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/media/**/*.ts": {
      "maxDuration": 180
    },
    "src/app/api/cron/**/*.ts": {
      "maxDuration": 60
    }
  }
}
